<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="App" parent="@android:style/Widget" />

    <style name="App.TitleL">
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/grayStrong</item>
    </style>

    <style name="App.TitleXl">
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:fontFamily">@font/raleway_extrabold</item>
        <item name="android:textColor">@color/grayStrong</item>
    </style>

    <style name="App.TitleXxl">
        <item name="android:textSize">@dimen/text_size_xxl</item>
        <item name="android:fontFamily">@font/raleway_extrabold</item>
        <item name="android:textColor">@color/grayStrong</item>
    </style>

    <!-- Movie Detail -->

    <style name="App.MovieDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textColor">@color/grayStrong</item>
        <item name="android:fontFamily">@font/raleway</item>
    </style>

    <style name="App.MovieDetail.FieldBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="App.MovieDetail.Field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="App.MovieDetail.Summary">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

</resources>
